{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "files": {
        "include": ["*"],
        "ignore": ["artifacts", "node_modules", "ignition/deployments"]
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "useKeyWithClickEvents": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "off"
            },
            "nursery": {
                "useSortedClasses": "error"
            },
            "correctness": {
                "noUnusedImports": "warn"
            }
        }
    },
    "formatter": {
        "indentStyle": "space",
        "lineWidth": 120,
        "indentWidth": 4
    }
}
