{
  "name": "hardhat-project",
  "scripts": {
    "build": "npx hardhat compile",
    "lint": "npx ts-standard && npx solhint 'contracts/**/*.sol' && prettier 'contracts/**/*.sol'",
    "lintfix": "npx ts-standard --fix && npx solhint 'contracts/**/*.sol' --fix && prettier --write 'contracts/**/*.sol'",
    "test": "npx hardhat test",
    "script": "npx hardhat run",
    "coverage": "npx hardhat coverage",
    "gas": "REPORT_GAS=true npx hardhat test",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.8.0",
    "@typechain/ethers-v5": "^10.1.1",
    "@typechain/hardhat": "^6.1.4",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.10",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.7",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.2",
    "prettier": "^2.8.0",
    "prettier-plugin-solidity": "^1.0.0",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.3"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "printWidth": 120,
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": false
        }
      }
    ]
  },
  "dependencies": {
    "@defi-wonderland/smock": "^2.3.4",
    "hardhat-contract-sizer": "^2.6.1"
  }
}
